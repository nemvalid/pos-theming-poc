---
metadata:
  name: Headline
  params:
    tag: h1
    variant:
      - h1
      - h2
      - h3
      - h4
      - h5
      - h6
    content: I'm a headline
---
{% liquid
  assign tag = params.tag | default: 'h1'
  assign variant = params.variant | default: 'h1'
  assign attributes = params.attributes
  assign content = params.content

  assign classes = 'font-bold custom-header '

  if variant == 'h1'
    assign classes = classes | append: 'text-5xl'
  elsif variant == 'h2'
    assign classes = classes | append: 'text-4xl'
  elsif variant == 'h3'
    assign classes = classes | append: 'text-3xl'
  elsif variant == 'h4'
    assign classes = classes | append: 'text-2xl'
  elsif variant == 'h5'
    assign classes = classes | append: 'text-xl'
  elsif variant == 'h6'
    assign classes = classes | append: 'text-xl'
  endif
%}
<{{tag}}
  class="{{classes}}"
  {% for attribute in attributes %}
  {{ attribute[0] }}="{{ attribute[1] }}"
  {% endfor %}
>{{content}} override</{{tag}}>


